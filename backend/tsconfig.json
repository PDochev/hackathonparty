{
  "compilerOptions": {
    "outDir": "./dist",          // Compiled JavaScript output directory
    "rootDir": "./src",          // Source files directory
    "module": "commonjs",        // Use commonjs module system
    "target": "es6",             // Target ECMAScript version
    "strict": true,              // Enable all strict type-checking options
    "esModuleInterop": true       // Enables emit interoperability between CommonJS and ES Modules
  },
  "include": ["src/**/*"]        // Include all TypeScript files in src
}